<section>
  <div
    class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-24 h-screen max-w-7xl"
  >
    <div class="grid grid-cols-1">
      <div class="w-full max-w-lg mx-auto my-4 bg-white shadow-xl rounded-xl">
        <img
          alt="team"
          class="object-cover object-center mx-auto -mt-8 shadow-xl"
          src="{{image}}"
        />
        <div class="p-6 lg:text-center">
          <span
            class="text-xs font-semibold tracking-widest text-blue-600 uppercase"
          > From {{director}}</span>
          <h4
            class="text-4xl font-semibold leading-none tracking-tighter text-neutral-600 lg:text-6xl"
          > {{title}}</h4>
                    <span
            class="mb-8 text-xs font-semibold tracking-widest text-blue-600 uppercase"
          > Starring: {{#each stars}} {{ this }}, {{/each}} </span>
          <p class="mt-3 text-base leading-relaxed text-gray-500">
            {{description}}
          </p>
          <div class="mt-6 flex justify-between">
            {{#each showtimes}}
                      <a href="#" class="flex items-center justify-center w-1/6 px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"> {{this}} </a>
                      {{/each}}
                    </div>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>