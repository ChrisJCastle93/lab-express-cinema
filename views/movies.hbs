<section>
  <div
    class="relative items-center w-full px-5 py-6 md:px-12 mx-auto lg:px-24 max-w-7xl"
  >
    <div class="grid w-full grid-cols-2 gap-6 mx-auto lg:grid-cols-3">
  {{#each result}}
      <div class="p-6">
        <a href="/movies/{{id}}"><img
          class="object-contain object-center w-full mb-8 sm:h-48 lg:h-48 md:h-48 rounded-3xl"
          src="{{image}}"
          alt="blog"
        /></a>
        <h2
          class="mx-auto text-center mb-8 text-2xl font-semibold leading-none tracking-tighter text-neutral-600 lg:text-3xl"
        > {{title}} </h2>
      </div>
    {{/each}}
    </div>
  </div>
</section>